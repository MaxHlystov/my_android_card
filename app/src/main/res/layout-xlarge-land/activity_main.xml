<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/my_photo"
        android:layout_width="@dimen/tablet_my_photo"
        android:layout_height="@dimen/tablet_my_photo"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/photo"
        android:src="@drawable/my_head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/my_photo">

        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/half_margin"
            android:animateLayoutChanges="true">


            <LinearLayout
                android:id="@+id/key_info_line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/key_start_margin"
                android:layout_marginTop="@dimen/half_margin"
                android:layout_marginEnd="@dimen/key_end_margin"
                android:layout_marginBottom="@dimen/half_margin"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/key_icon_size"
                    android:layout_height="@dimen/key_icon_size"
                    android:layout_marginEnd="@dimen/key_end_margin"
                    android:contentDescription="@string/photo"
                    android:src="@drawable/phd" />

                <TextView
                    android:id="@+id/key_info1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phd_text"
                    android:textSize="@dimen/lanscape_big_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/key_info_line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/key_info_line1"
                android:layout_marginStart="@dimen/key_start_margin"
                android:layout_marginTop="@dimen/half_margin"
                android:layout_marginEnd="@dimen/key_end_margin"
                android:layout_marginBottom="@dimen/half_margin"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/key_icon_size"
                    android:layout_height="@dimen/key_icon_size"
                    android:layout_marginEnd="@dimen/key_end_margin"
                    android:contentDescription="@string/photo"
                    android:src="@drawable/stepik_logo" />

                <TextView
                    android:id="@+id/key_info2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/top_ten_stepik"
                    android:textSize="@dimen/lanscape_big_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/key_info_line3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/key_info_line2"
                android:layout_marginStart="@dimen/key_start_margin"
                android:layout_marginTop="@dimen/half_margin"
                android:layout_marginEnd="@dimen/key_end_margin"
                android:layout_marginBottom="@dimen/half_margin"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/key_icon_size"
                    android:layout_height="@dimen/key_icon_size"
                    android:layout_marginEnd="@dimen/key_end_margin"
                    android:contentDescription="@string/photo"
                    android:src="@drawable/logo1c" />

                <TextView
                    android:id="@+id/key_info3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_1c_worker"
                    android:textSize="@dimen/lanscape_big_size" />
            </LinearLayout>


            <View
                android:id="@+id/descr_top_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/key_info_line3"
                android:layout_marginStart="@dimen/key_start_margin"
                android:layout_marginTop="@dimen/half_margin"
                android:layout_marginEnd="@dimen/key_end_margin"
                android:layout_marginBottom="@dimen/half_margin"
                android:background="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/descr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/descr_top_line"
                android:layout_marginStart="@dimen/key_start_margin"
                android:layout_marginTop="@dimen/half_margin"
                android:layout_marginEnd="@dimen/key_end_margin"
                android:layout_marginBottom="@dimen/half_margin"
                android:text="@string/description"
                android:textSize="@dimen/lanscape_big_size" />

            <EditText
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/descr"
                android:layout_alignParentRight="true"
                android:layout_marginStart="@dimen/key_start_margin"
                android:layout_marginTop="@dimen/half_margin"
                android:layout_marginEnd="@dimen/key_end_margin"
                android:layout_marginBottom="@dimen/half_margin"
                android:hint="@string/enter_a_message"
                android:lines="1"
                android:textSize="@dimen/lanscape_big_size" />

            <TextView
                android:id="@+id/send_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/message"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/half_margin"
                android:clickable="true"
                android:text="@string/send_message"
                android:textColor="@color/red"
                android:textSize="@dimen/lanscape_big_size" />

            <LinearLayout
                android:id="@+id/social"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/send_message"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/half_margin"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/telega"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/half_margin"
                    android:src="@drawable/telegram" />

                <ImageView
                    android:id="@+id/linkedin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/half_margin"
                    android:src="@drawable/linkedin" />

                <ImageView
                    android:id="@+id/github"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/half_margin"
                    android:src="@drawable/github" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>